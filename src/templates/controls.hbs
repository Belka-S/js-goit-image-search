{{! controlsMarkup function }}

<section class='controls container'>
  <form class='option-form' id='option-form'>
    {{! Safe Search }}
    <label class='option-form__label' for='safe'>Safe...
      {{#if safeSearch}}
        <input type='checkbox' id='safe' checked />
      {{/if}}
      {{#unless safeSearch}}
        <input type='checkbox' id='safe' />
      {{/unless}}
      <span class='option-form__span'></span>
    </label>
    {{! Image type }}
    <label class='option-form__label' for='type'>Image type...
      <select id='type'>
        <option value='all'>all</option>
        <option value='photo'>photo</option>
        <option value='illustration'>illustration</option>
        <option value='vector'>vector</option>
      </select>
    </label>
    {{! Image orientation }}
    <label class='option-form__label' for='orientation'>Orientation...
      <select id='orientation'>
        <option value='all'>all</option>
        <option value='horizontal'>horizontal</option>
        <option value='vertical'>vertical</option>
      </select>
    </label>
    {{! Load limit }}
    <label class='option-form__label' for='loading'>Loading...
      <select id='loading'>
        <option value='30'>30</option>
        <option value='60'>60</option>
        <option value='150'>150</option>
        <option id='endless' value='162'>endless</option>
      </select>
    </label>

  </form>
  <form class='search-form' id='search-form'>
    <input
      class='search'
      type='text'
      name='image-query'
      autocomplete='off'
      placeholder='Image query...'
    />
    <button class='search' type='submit'>Search</button>
  </form>
</section>

<div class='gallery container'></div>